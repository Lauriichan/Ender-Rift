{
  "multipart": [
    {
      "when": {"base": "true"},
      "apply":[
        { "model":  "enderrift:block/base" }
      ]
    },
    {
      "when": {"type1": "corner"},
      "apply":[
        { "model":  "enderrift:block/hedron" }
      ]
    },
    {
      "when": {"type2": "vertical"},
      "apply":[
        { "model":  "enderrift:block/straight", "x": 90 }
      ]
    },
    {
      "when": {"type2": "side_ns"},
      "apply":[
        { "model":  "enderrift:block/straight" }
      ]
    },
    {
      "when": {"type2": "side_ew"},
      "apply":[
        { "model":  "enderrift:block/straight", "y": 90 }
      ]
    }
  ]
}